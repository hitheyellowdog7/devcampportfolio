<% if flash[:alert] %>
    <%= js add_gritter(flash[:alert], title: "Portfolio", sticky: false, time: 5000) %>
<% elsif flash[:error] %>
    <%= js add_gritter(flash[:error], title: "Portfolio", sticky: false, time: 5000) %>
<% else flash[:notice] %>
    <%= js add_gritter(flash[:notice], title: "Portfolio", sticky: false, time: 5000) %>
<% end %>